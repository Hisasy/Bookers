<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <div>
   <label>Title</label>
   <%= f.text_field :title %>
  </div>
  <div>
  <label>Body</label>
  <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'CreateBook' %>
  </div>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>

<% end %>